<policies>
  <inbound>
    <base />
    <set-variable name="mockResponse" value="@(context.Variables.GetValueOrDefault&lt;string&gt;(&quot;${api_name}-${operation_id}-mock&quot;))" />
    <set-variable name="contentType" value="@(context.Request.Headers.GetValueOrDefault(&quot;Accept&quot;, &quot;application/json&quot;))" />
    <choose>
      <when condition="@(context.Variables[&quot;mockResponse&quot;] != null)">
        <return-response>
          <set-status code="200" reason="OK" />
          <set-header name="Content-Type" exists-action="override">
            <value>@(context.Variables["contentType"])</value>
          </set-header>
          <set-header name="X-Mock-Response" exists-action="override">
            <value>true</value>
          </set-header>
          <set-body>@(context.Variables["mockResponse"])</set-body>
        </return-response>
      </when>
      <otherwise>
        <return-response>
          <set-status code="404" reason="Not Found" />
          <set-header name="Content-Type" exists-action="override">
            <value>application/json</value>
          </set-header>
          <set-header name="X-Mock-Response" exists-action="override">
            <value>true</value>
          </set-header>
          <set-body>{"error": "No mock response found for this operation"}</set-body>
        </return-response>
      </otherwise>
    </choose>
  </inbound>
  <backend>
    <base />
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>
