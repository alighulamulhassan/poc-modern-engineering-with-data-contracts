<policies>
  <inbound>
    <base />
    <set-variable name="mockResponse" value="@(context.Variables.GetValueOrDefault&lt;string&gt;(&quot;${api_name}-${operation_id}-mock&quot;))" />
    <choose>
      <when condition="@(context.Variables[&quot;mockResponse&quot;] != null)">
        <return-response>
          <set-body>@(context.Variables["mockResponse"])</set-body>
        </return-response>
      </when>
      <otherwise>
        <return-response>
          <set-status code="404" reason="Not Found" />
          <set-body>{"error": "No mock response found for this operation"}</set-body>
        </return-response>
      </otherwise>
    </choose>
  </inbound>
  <backend>
    <base />
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>
